{
    "app-id": "net.dengine.Doomsday",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "doomsday",
    "modules": [
        {
            "name": "doomsday",
            "buildsystem": "cmake",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DDE_PREFIX=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "ssh://git@skyjake.fi/doomsday/engine.git",
                    "branch": "master"
                }
            ]
        }
    ],
    "finish-args": [
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=home",
        "--filesystem=/usr/share/games:ro",
        "--filesystem=/etc/timidity:ro"
    ]
}
