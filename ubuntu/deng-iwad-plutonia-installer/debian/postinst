#! /bin/sh
# postinst script for deng-iwad-plutonia-installer
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)

    echo "Please enter the full path to your Doom 2 wad file"
    echo "eg /dvd/plutonia/plutoniaCD/plutonia.WAD"
    echo
    read doomwadpath
    doomwad=`basename $doomwadpath |tr A-Z a-z`
    if [ $doomwad != "plutonia.wad" ]
	then
	    echo "ERROR: "$doomwad" is not plutonia.wad"
	    exit 127
    fi
    iwadpath="/usr/share/games/doom/iwad/plutonia/"$doomwad
    gwapath=`echo $iwadpath | sed  's/[.]wad/.gwa/g'`
    cp $doomwadpath $iwadpath
    glbsp -q $iwadpath
    chown --silent root:games $iwadpath
    chmod --silent 644 $iwadpath
    chown --silent root:games $gwapath
    chmod --silent 644 $gwapath
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


