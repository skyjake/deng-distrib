#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatability version to use.
#export DH_COMPAT=3

# No building here
build: 

clean:
	dh_testdir
	dh_testroot

	dh_clean

install:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	mkdir -p debian/deng-iwad-plutonia-installer/usr/share/bug/deng-iwad-plutonia-installer
	install -m 644 debian/reportbug.control debian/deng-iwad-plutonia-installer/usr/share/bug/deng-iwad-plutonia-installer/control
	install -m 644 debian/reportbug.presubj debian/deng-iwad-plutonia-installer/usr/share/bug/deng-iwad-plutonia-installer/presubj
	install -m 644 debian/deng-iwad-plutonia-installer.desktop debian/deng-iwad-plutonia-installer/usr/share/applications/deng-iwad-plutonia-installer.desktop
	install -m 755 debian/reportbug.script debian/deng-iwad-plutonia-installer/usr/share/bug/deng-iwad-plutonia-installer/script
	install -o root -g root -m 644 debian/deng-iwad-plutonia-installer.lintian debian/deng-iwad-plutonia-installer/usr/share/lintian/overrides/deng-iwad-plutonia-installer

binary: binary-indep

binary-arch: 

binary-indep: install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installmenu
	dh_installdocs
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
